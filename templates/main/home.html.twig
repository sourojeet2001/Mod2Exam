{% extends 'main/nav.html.twig' %}
{% block body %}
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<div class=" container">
		<div>
			<input type="radio" id="cost" name="item" value="costs">
			<label for="mobile">Cost</label><br>
			<input type="radio" id="author" name="item" value="authors">
			<label for="laptop">Author</label><br>
			<input type="submit" value="submit" onclick="submit(event)">
		</div>
		<div class="songlistlibrary">
			{% for book in books %}
				<div class="innerlibrary">
					<div>
						<img src="{{ book.imagePath }}" alt="" height="300px" width="300px">
						<div class="flex">
							<h1>{{ book.title }}</h1>
						</div>
						<h3>{{book.author}}</h3>
						<h4>{{book.description}}</h4>
						<h4>{{book.cost}}</h4>
					</div>
				</div>
			{% endfor %}
		</div>
		<div class="songlist">
			{% for upload in uploads %}
				<div class="inner">
					<div>
						<img src="{{ upload.imagePath }}" alt="" height="300px" width="300px">
						<h1>{{ upload.title }}</h1>
						<h1>{{ upload.description }}</h1>
						<h1>{{ upload.cost }}</h1>
						<h1>{{ upload.author }}</h1>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
